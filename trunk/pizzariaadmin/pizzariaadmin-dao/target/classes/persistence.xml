	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit name="persistenceUnit" transaction-type="RESOURCE_LOCAL">
	    <validation-mode>NONE</validation-mode>   
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>br.com.fiap.pizzaria.bean.Pizza</class>
		<class>br.com.fiap.pizzaria.bean.Ingrediente</class>
		<class>br.com.fiap.pizzaria.bean.Pedido</class>
		<class>br.com.fiap.pizzaria.bean.Endereco</class>
		<class>br.com.fiap.pizzaria.bean.PedidoPizza</class>
		<class>br.com.fiap.pizzaria.bean.PedidoPizzaId</class>
		<class>br.com.fiap.pizzaria.bean.Imagem</class>
	</persistence-unit>
	
	



</persistence>